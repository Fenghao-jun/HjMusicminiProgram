/* components/song-menu-area/children-cmps/song-menu-item/index.wxss */
.poster {
  width: 100%;
  position: relative;
  display: inline-block;
}

.image {
  width: 100%;
}
.playcount {
  position: absolute;
  color: white;
  right: 10rpx;
  bottom: 10rpx;
  font-size: 24rpx;
  border-radius: 12rpx;
  padding: 6rpx 10rpx;
  background: rgba(0, 0, 0, 0.5);
}
.bottom {
  width: 100%;
  font-size: 26rpx;

  /* 显示两行 */
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -moz-box;
  -moz-line-clamp: 2;
  -moz-box-orient: vertical;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal;
  overflow: hidden;
}
