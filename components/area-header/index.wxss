/* components/area-header/index.wxss */
.area-header {
  padding: 30rpx 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  text-align: center;
  align-items: center;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
}

.slot:empty + .default {
  display: flex;
}

.default {
  display: none;
  align-items: center;
}
.right-title {
  color: #777777;
  font-size: 28rpx;
}

.icon {
  width: 50rpx;
  height: 50rpx;
}
