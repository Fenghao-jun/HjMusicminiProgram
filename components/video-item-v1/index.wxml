<!--components/video-item-v2/index.wxml-->
<wxs src="../../utils/format.wxs" module="format"></wxs>
<view class="item">
	<view class="album">
		<image class="iamge" src="{{item.cover}}" mode="widthFix"></image>
		<view class="info">
			<view class="count">{{format.formatCounter(item.playCount)}}</view>
			<view class="duration">{{ format.formatDuration(item.mv.videos[0].duration) }}</view>
		</view>
	</view>
	<view class="content">
		{{item.name}} - {{item.artistName}}
	</view>
</view>